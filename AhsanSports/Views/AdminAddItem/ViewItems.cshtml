@*@model AhsanSports.Models.Domain.Items*@
@model List<AhsanSports.Models.Domain.Items>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-family: Arial, sans-serif;
        border: 1px solid #ddd;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tbody tr:hover {
        background-color: #f5f5f5;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Available</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var viewItems in Model)
        {
            <tr>
                <td>@viewItems.Name</td>
                <td>@viewItems.Price</td>
                <td>@(viewItems.IsAvailable ? "Yes" : "No")</td>
                <td>
                    @using (Html.BeginForm("Delete", "AdminAddItem", new { area = "" }, FormMethod.Post))
                    {
                        <input type="hidden" name="id" value="@viewItems.Id" />
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    }
                </td>
                <td><button type="button" class="btn btn-outline-warning">Edit</button></td>
            </tr>
        }
    </tbody>
</table>
